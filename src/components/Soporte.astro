        </div>
</section>


<script is:client>
  const elementos = document.querySelectorAll('.aparecer, .rebote');
  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, { threshold: 0.2 });
  elementos.forEach(el => observer.observe(el));

  // üîÅ Animaci√≥n en bucle para im√°genes del cuadro blanco
  const imagenes = document.querySelectorAll('.soporte-loop');
  let index = 0;

  function mostrarImagen() {
    imagenes.forEach((img, i) => {
      img.classList.remove('visible');
      if (i === index) img.classList.add('visible');
    });
    index = (index + 1) % imagenes.length;
  }

  mostrarImagen();
  setInterval(mostrarImagen, 5500);
</script>


